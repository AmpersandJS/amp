/*--------------------------------------------------------------------
*
* DOCS PAGES
*
--------------------------------------------------------------------*/

.docs-page, .learn-index

  //- please mind the padding on the footer for docs pages
  //- it keeps the footer from overlapping the side nav
  .footer-main
    max-width: 1100px
    margin: 0 auto
    padding-right: 60px
    padding-left: 340px
    border-top: none

    .nav-footer
      border-top: 1px solid $border-color
      padding-top: 40px

.docs
  max-width: 1100px
  margin: 0 auto 40px
  padding: 0 60px
  word-wrap: break-word

  p, ul, ol, dl, blockquote
    font-size: $font-size-base

  a.back
    display: none

.nav-docs
  width: 250px
  padding-right: 10px

.docs-content
  padding-left: 280px
  min-height: 350px

  section:first-child
    .anchor
      margin-top: 0

  .anchor
    position: relative
    display: block
    margin-top: 45px

    .header-link
      width: 20px
      height: 8px
      margin-top: -3px
      display: none
      position: absolute
      left: -25px
      top: 50%
      background: no-repeat 0 0
      background-image: url(../images/icon-link.png)
      background-image: url(../images/icon-link.svg), none
      background-size: 20px auto

    &:hover
      .header-link
        display: block

  .anchor:focus
    outline: none

  section
    padding-bottom: 40px
    margin-bottom: 50px

    &:not(:last-child)
      border-bottom: 1px solid $border-color

  h1, h2, h3
    code
      font-size: 0.6em
      background: none
      font-weight: normal

//- Responsive video embeds

.video-container
  position: relative
  padding-bottom: 56.25%
  padding-top: 30px
  height: 0
  overflow: hidden
  margin-bottom: 20px
  max-width: 100%
  height: auto

  iframe, object, embed
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%

@media (max-width: 1000px)

  .nav-docs
    width: 200px

  .docs-content
    padding-left: 230px

  .docs-page, .learn-index
    .footer-main
      padding-left: 290px

@media (max-width: 860px)

  .docs
    padding: 0 20px

  .docs-page, .learn-index
    .footer-main
      padding-right: 20px
      padding-left: 250px

@media (max-width: 768px)

  .docs-page
    .nav-docs
      display: none

  .docs-content
    padding-left: 0
    min-height: 0

  .learn-index
    .nav-docs
      width: 100%
      position: static
      overflow: auto
    .docs-content
      max-width: 500px
      margin: 0 auto
      text-align: center

  .docs-page, .learn-index
    .footer-main
      padding-left: 0
      padding-right: 0

  .docs
    a.back
      margin: -50px 0 50px
      padding-left: 25px
      display: block
      background: no-repeat 0 45%
      background-image: url(../images/icon-arrow-back.png)
      background-image: url(../images/icon-arrow-back.svg), none
      background-size: auto 10px
