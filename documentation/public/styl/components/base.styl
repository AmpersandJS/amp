/*--------------------------------------------------------------------
*
* BASE
*
--------------------------------------------------------------------*/

*, *:after, *:before
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

html
  height: 100%
  font-size: 100%

body
  min-height: 100%
  font: $font-size-base/$line-height-base $font-family-sentinel
  font-weight: 400
  color: $gray-dark
  background-color: white
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  border: 20px solid $border-color

@media (max-width: 860px)
  body
    border-width: 10px

::-moz-selection
  background-color: $blue-light
  color: white

::selection
  background-color: $blue-light
  color: white

.cf
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both

//- Headers and copy 

h1, h2, h3, h4
  line-height: 1.3

h1, h2, h3, h4, h5, h6
  font-family: $font-family-gotham-round
  font-weight: $font-weight-semibold
  color: $gray-darker

h1
  font-size: $font-size-h1

h2
  font-size: $font-size-h2

h3
  font-size: $font-size-h3

h4 
  font-size: $font-size-h4

h5
  font-size: $font-size-h5
  text-transform: uppercase
  color: $gray

h6
  font-size: $font-size-h6
  margin-bottom: 0

a
  color: $blue
  text-decoration: none
  cursor: pointer

  &:hover 
    color: darken($blue, 20%)

small
  font-size: $font-size-small


p, ul, ol, dl, blockquote
  font-size: $font-size-copy

ul, ol
  margin: 15px 0 15px 30px
  padding: 0

  li ul
    li
      list-style-type: circle 

  li li ul
    li
      list-style-type: square

ul
  li
    list-style-type: disc

  &.unstyled
    margin: 0

    li
      display: inline-block
      list-style-type: none

ol
  li
    list-style-type: decimal

hr
  width: 100%
  margin-bottom: 70px
  border: none
  border-top: 1px solid $border-color

@media (max-width: 700px)
  hr
    margin-bottom: 40px

//- Logos

.logo
  background-repeat: no-repeat
  display: block
  &.logo-ampersand
    background-image: url(../images/logo-ampersand.png)
    background-image: $logo-ampersand, none
  &.logo-ampersand-gray
    background-image: url(../images/logo-ampersand-gray.png)
    background-image: $logo-ampersand-gray, none
  &.logo-jsforteams
    background-image: url(../images/logo-jsforteams.png)
    background-image: $logo-jsforteams, none
  &.logo-humanjs
    background-image: url(../images/logo-humanjs.png)
    background-image: $logo-humanjs, none
  &.logo-talky
    background-image: url(../images/logo-talky.png)
    background-image: $logo-talky, none
  &.logo-otalk
    background-image: url(../images/logo-otalk.png)
    background-image: $logo-otalk, none
  &.logo-andbang
    background-image: url(../images/logo-andbang.png)
    background-image: $logo-andbang, none
  &.logo-yahoo
    background-image: url(../images/logo-yahoo.png)

//- Container

.container
  position: relative

//- Illustrations

.illustration
  margin: 0 auto 30px
  padding: 0 20px
  text-align: center
  img
    width: 100%
    max-width: 400px
  &.guide
    margin-top: 40px
  &.amp
    margin-top: 40px
    max-width: 350px
    @media (max-width: 400px)
      max-width: 250px