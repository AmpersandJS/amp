/*--------------------------------------------------------------------
*
* CODE
*
--------------------------------------------------------------------*/

code
  font-family: Menlo, Monaco, Consolas, monospace
  text-rendering: optimizeLegibility
  font-size: $font-size-small
  -webkit-font-smoothing: antialiased
  overflow-x: auto
  white-space: nowrap
  border: none
  padding: .154em .308em
  font-size: .8125em
  color: black
  background: lighten($gray-lighter, 40%)
  white-space: pre-wrap

pre
  max-width: 100%
  overflow-x: auto

  code
    display: block
    padding: 20px
    line-height: 1.5
    white-space: pre

//- &yet light

pre
  code
    background: lighten($gray-lighter, 80%)
    border: 1px solid $gray-lighter
    word-wrap: pre

  .comment,
  .template_comment,
  .diff .header,
  .javadoc, .type
    color: darken($gray-light, 20%)

  .keyword, .css .rule .keyword, .at_rule, .winutils, .javascript .title,
  .nginx .title, .subst, .request, .status
    color: $blue

  .string, .tag .value, .phpdoc, .tex .formula
    color: darken($pink, 10%)

  .title, .coffeescript .params, .scss .preprocessor
    color: lighten($blue-saturated-lighter, 30%)
    font-weight: bold

  .class .title, .haskell .type, .vhdl .literal, .tex .command,
  .tag, .tag .title, .rules .property, .django .tag .keyword,
  .built_in, .lisp .title, .clojure .built_in
    color: $gray

  .attribute, .variable, .lisp .body, .preprocessor, .pragma, .pi, .doctype, .shebang, .cdata
    color: lighten($gray, 10%)

  .regexp, .addition
    color: $green

  .symbol, .ruby .symbol .string, .lisp .keyword, .tex .special, .prompt, .deletion
    color: darken($pink, 30%)

  .diff .change
    background: $orange
